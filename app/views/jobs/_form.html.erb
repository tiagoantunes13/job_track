<div class="max-w-2xl mx-auto bg-white shadow-xl rounded-2xl p-8 space-y-8">

  <%= form_with(model: job, local: true, class: "space-y-6") do |f| %>
    <% if job.errors.any? %>
      <div class="bg-red-50 border border-red-300 text-red-700 px-4 py-3 rounded-lg">
        <h3 class="font-semibold mb-2">Please fix the following:</h3>
        <ul class="list-disc list-inside text-sm">
          <% job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :company, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :company, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= f.label :location, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :location, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :job_posting_url, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :job_posting_url, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :description, rows: 4, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.submit "Create Job Application", 
          class: "w-full bg-gradient-to-r from-blue-600 to-blue-500 text-white font-semibold py-3 px-6 rounded-full shadow-md hover:from-blue-700 hover:to-blue-600 transition duration-200 ease-in-out" %>
    </div>
  <% end %>
</div>
