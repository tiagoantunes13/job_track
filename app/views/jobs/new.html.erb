
<% content_for :title, "New Job" %>

<!-- Full Page Background -->
<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4">
  <!-- Card -->
  <div class="max-w-2xl w-full bg-white shadow-lg rounded-2xl p-8">
    <!-- Page Heading -->
    <h1 class="text-3xl font-bold text-gray-800 mb-8 text-center">New Job</h1>

    <!-- Form -->
    <%= render "form", job: @job %>

    <!-- Back Link -->
    <div class="mt-6 text-center">
      <%= link_to "Back to jobs", jobs_path,
            class: "text-blue-600 font-semibold hover:text-blue-700 transition-colors" %>
    </div>
  </div>
</div>
