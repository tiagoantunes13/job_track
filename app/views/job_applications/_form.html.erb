<div class="max-w-2xl mx-auto bg-white shadow-xl rounded-2xl p-8 space-y-8">

  <%= form_with(model: job_application, local: true, class: "space-y-6") do |f| %>
    <% if job_application.errors.any? %>
      <div class="bg-red-50 border border-red-300 text-red-700 px-4 py-3 rounded-lg">
        <h3 class="font-semibold mb-2">Please fix the following:</h3>
        <ul class="list-disc list-inside text-sm">
          <% job_application.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :job_id, value: @job.id %>

    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status, JobApplication.statuses.keys.map { |s| [s.humanize, s] }, {}, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :expectations, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :expectations, JobApplication.expectations.keys.map { |e| [e.humanize, e] }, {}, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :application_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :application_date, value: Date.current, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :contact_person, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :contact_person, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :notes, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :notes, rows: 4, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.submit "Create Job Application", 
          class: "w-full bg-gradient-to-r from-blue-600 to-blue-500 text-white font-semibold py-3 px-6 rounded-full shadow-md hover:from-blue-700 hover:to-blue-600 transition duration-200 ease-in-out" %>
    </div>
  <% end %>
</div>
