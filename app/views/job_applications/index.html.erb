<% content_for :title, "Job Applications" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Flash Messages -->
    <% if notice %>
      <div class="mb-6 bg-emerald-50 border-l-4 border-emerald-400 p-4 rounded-r-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-emerald-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-emerald-700 font-medium"><%= notice %></p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-900">Job Applications</h1>
          <p class="mt-2 text-lg text-gray-600">Track and manage your job applications</p>
        </div>
      </div>
      
      <!-- Stats Bar -->
      <div class="mt-6 grid grid-cols-1 md:grid-cols-5 gap-4">
        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-blue-100 rounded-lg">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-600">Total</p>
              <p class="text-xl font-bold text-gray-900"><%= @job_applications.count %></p>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-yellow-100 rounded-lg">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-600">Call</p>
              <p class="text-xl font-bold text-gray-900"><%= @job_applications.where(status: 'call').count %></p>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-purple-100 rounded-lg">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-600">Interviews</p>
              <p class="text-xl font-bold text-gray-900"><%= @job_applications.where(status: 'interviewing').count %></p>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-red-100 rounded-lg">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-600">Rejection</p>
              <p class="text-xl font-bold text-gray-900"><%= @job_applications.where(status: 'rejected').count %></p>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-green-100 rounded-lg">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-600">Offers</p>
              <p class="text-xl font-bold text-gray-900"><%= @job_applications.where(status: 'offered').count %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Applications Grid -->
    <% if @job_applications.any? %>
      <div id="job_applications" class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
        <% @job_applications.each do |job_application| %>

            <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-indigo-200 transition-all duration-300 group-hover:-translate-y-1 flex flex-col h-full">
              <!-- Header with Status -->
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                  <div class="flex items-center space-x-2 mb-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= status_badge_class(job_application.status) %>">
                      <div class="w-2 h-2 rounded-full bg-current mr-1.5"></div>
                      <%= job_application.status.humanize %>
                    </span>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= expectations_badge_class(job_application.expectations) %>">
                      <%= job_application.expectations&.humanize %>
                    </span>
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors">
                    <%= job_application.position %>
                  </h3>
                </div>
                
                <!-- Company Logo Placeholder -->
                <div class="w-12 h-12 bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl flex items-center justify-center flex-shrink-0">
                  <span class="text-lg font-bold text-gray-600">
                    <%= job_application.company&.first&.upcase %>
                  </span>
                </div>
              </div>

              <!-- Company & Location -->
              <div class="mb-4">
                <p class="text-lg font-semibold text-gray-800 mb-1"><%= job_application.company %></p>
                <div class="flex items-center text-gray-600">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <%= job_application.location %>
                </div>
              </div>

              <!-- Details Grid -->
              <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                  <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Applied</p>
                  <p class="text-sm font-medium text-gray-900">
                    <%= job_application.application_date&.strftime("%b %d, %Y") || "N/A" %>
                  </p>
                </div>
                <div>
                  <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</p>
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= job_application.contact_person.presence || "Not specified" %>
                  </p>
                </div>
              </div>

              <!-- Cover Letter Status -->
              <div class="mb-4">
                <% if job_application.cover_letter.present? %>
                  <div class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-emerald-100 text-emerald-800">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Cover Letter
                  </div>
                <% else %>
                  <div class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-600">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                    </svg>
                    No Cover Letter
                  </div>
                <% end %>
              </div>

              <!-- Notes Preview -->
              <div class="flex-grow">
                <% if job_application.notes.present? %>
                  <div class="mb-4">
                    <p class="text-sm text-gray-600 line-clamp-3">
                      <%= truncate(job_application.notes, length: 120) %>
                    </p>
                  </div>
                <% else %>
                  <div class="mb-4">
                    <p class="text-sm text-gray-400 italic">No notes added</p>
                  </div>
                <% end %>
              </div>

              <!-- Actions -->
              <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                <%= link_to 'View Details', job_application.job, class:"text-sm text-gray-500" %>
                <%= link_to 'Edit', edit_job_application_path(job_application), class:"text-sm text-gray-500" %>
              </div>
            </div>

        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No applications yet</h3>
        <p class="text-gray-600 mb-6">Get started by creating your first job application.</p>
        <%= link_to "Create Application", new_job_application_path, 
            class: "inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" %>
      </div>
    <% end %>
  </div>
</div>