<% content_for :title, "Job Applications" %>

<!-- Notice / Flash -->
<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
    <p><%= notice %></p>
  </div>
<% end %>

<!-- Page Heading -->
<h1 class="text-3xl font-bold text-gray-800 mb-8">Job Applications</h1>

<!-- Cards Grid -->
<div id="job_applications" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @job_applications.each do |job_application| %>
    <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col justify-between hover:shadow-xl transition-shadow">
      <!-- Job Info -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= job_application.company %></h2>
        <p class="text-gray-600 mb-4"><%= job_application.position %></p>
        Status - <span class="inline-block text-xs font-medium px-3 py-1 rounded-full <%= status_badge_class(job_application.status) %>">
          <%= job_application.status %>
        </span>
      </div>

      <div>
        Expectations - <span class="inline-block text-xs font-medium px-3 py-1 rounded-full <%= expectations_badge_class(job_application.expectations) %>">
          <%= job_application.expectations %>
        </span>
      </div>

      <div>
        <% if job_application.cover_letter.present? %>
          <span class="inline-block text-xs font-medium px-3 py-1 rounded-full bg-green-100 text-green-800">
            Cover Letter Generated
          </span>
        <% else %>
          <span class="inline-block text-xs font-medium px-3 py-1 rounded-full bg-gray-100 text-gray-600">
            No Cover Letter
          </span>
        <% end %>
      </div>

      <!-- Actions -->
      <div class="mt-4 flex justify-between items-center">
        <%= link_to "View", job_application,
              class: "text-blue-600 font-semibold hover:text-blue-700" %>
        <%= link_to "Edit", edit_job_application_path(job_application),
              class: "text-gray-500 hover:text-gray-700" %>
      </div>
    </div>
  <% end %>
</div>

<!-- New Job Application Button -->
<div class="mt-8 text-center">
  <%= link_to "New Job Application", new_job_application_path,
        class: "inline-block bg-blue-600 text-white font-semibold py-2 px-6 rounded-full hover:bg-blue-700 transition-colors" %>
</div>
