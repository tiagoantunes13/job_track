<!-- Header -->
<header class="bg-white shadow-sm">
  <div class="container mx-auto flex items-center justify-between px-6 py-4">
    <!-- Logo / Brand -->
    <%= link_to job_applications_path do %>
    <div class="flex items-center gap-4 text-blue-600">
        <div class="size-4">
          <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M24 18.4228L42 11.475V34.3663C42 34.7796 41.7457 35.1504 41.3601 35.2992L24 42V18.4228Z"
              fill="currentColor"
            ></path>
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M24 8.18819L33.4123 11.574L24 15.2071L14.5877 11.574L24 8.18819ZM9 15.8487L21 20.4805V37.6263L9 32.9945V15.8487ZM27 37.6263V20.4805L39 15.8487V32.9945L27 37.6263ZM25.354 2.29885C24.4788 1.98402 23.5212 1.98402 22.646 2.29885L4.98454 8.65208C3.7939 9.08038 3 10.2097 3 11.475V34.3663C3 36.0196 4.01719 37.5026 5.55962 38.098L22.9197 44.7987C23.6149 45.0671 24.3851 45.0671 25.0803 44.7987L42.4404 38.098C43.9828 37.5026 45 36.0196 45 34.3663V11.475C45 10.2097 44.2061 9.08038 43.0155 8.65208L25.354 2.29885Z"
              fill="currentColor"
            ></path>
          </svg>
        </div>
        <h2 class="text-blue-600 text-lg font-bold leading-tight tracking-[-0.015em]">ApplyTrack</h2>
      </div>
    <% end %>
    

    <!-- Navigation -->
    <nav class="hidden md:flex space-x-8 text-gray-700 font-medium">
      <%= link_to 'Applications', job_applications_path, class: "hover:text-blue-600 transition-colors" %>
      <%= link_to 'Profile', edit_profile_path, class: "hover:text-blue-600 transition-colors" %>
      <%= link_to 'Check Location', new_remote_analysis_path, class: "hover:text-blue-600 transition-colors" %>
      <%= link_to 'Search Jobs', job_search_list_path, class: "hover:text-blue-600 transition-colors" %>
      <%= link_to 'Saved Jobs', jobs_path, class: "hover:text-blue-600 transition-colors" %>
      <%= link_to 'Import CV',  new_resume_path, class: "hover:text-blue-600 transition-colors" %>
    </nav>

    <!-- CTA Button -->
    <div class="hidden md:block">
      <% if current_user.present? %>
        <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-red-600 text-white px-5 py-2 rounded-full font-semibold hover:bg-blue-700 transition-colors" %>
        <p>
        </p>
      <% else %>
        <%= link_to 'Sign Up Free', new_user_session_path, class: "bg-green-600 text-white px-5 py-2 rounded-full font-semibold hover:bg-blue-700 transition-colors" %>
        </a>
      <% end %>
      
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="md:hidden text-gray-700 hover:text-blue-600 focus:outline-none">
      <!-- Simple hamburger icon -->
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden px-6 pb-4 space-y-2 bg-white border-t">
    <a href="#features" class="block text-gray-700 hover:text-blue-600">Features</a>
    <a href="#how-it-works" class="block text-gray-700 hover:text-blue-600">How It Works</a>
    <a href="#pricing" class="block text-gray-700 hover:text-blue-600">Pricing</a>
    <a href="#contact" class="block text-gray-700 hover:text-blue-600">Contact</a>
    <a href="#signup" class="block text-blue-600 font-semibold mt-2">Sign Up Free</a>
  </div>

  <script>
    const toggleBtn = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    toggleBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>
</header>
