<%# app/views/job_search/list.html.erb %>
<% content_for :title, "Job Listings" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Flash Messages -->
    <% if notice %>
      <div class="mb-6 bg-emerald-50 border-l-4 border-emerald-400 p-4 rounded-r-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-emerald-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-emerald-700 font-medium"><%= notice %></p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Header Section -->
    <div class="mb-8">
  <div class="flex items-center justify-between flex-wrap gap-4">
    <div>
      <h1 class="text-4xl font-bold text-gray-900">Job Listings</h1>
      <p class="mt-2 text-lg text-gray-600">Search results for your query</p>
    </div>
  </div>
</div>

<div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-8 mb-8">
  <%= form_with url: job_search_list_path, method: :get, class: "flex flex-col md:flex-row md:items-end gap-6" do |form| %>
    <div class="flex-1">
      <%= form.label :q, "Job Title", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :q, value: params[:q], placeholder: "e.g., Ruby developer", class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
    
    <div class="flex-1">
      <%= form.label :location, "Location", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :location, value: params[:location], placeholder: "e.g., United States", class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
    
    <div class="shrink-0">
      <%= form.submit "Search", class: "w-full md:w-auto inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-semibold rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer transition-colors" %>
    </div>
  <% end %>
</div>

    <!-- Jobs Grid -->
    <% if @jobs.any? %>
      <div id="job_listings" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        <% @jobs.each do |job| %>
          <div id=<%= dom_id_for_json(job[:job_id]) %> class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-indigo-200 transform hover:-translate-y-0.5 transition-all duration-200 flex flex-col h-full">
            <%= button_to 'ignore job', ignore_job_path(external_job_id: job[:job_id])%>
            <!-- Title -->
            <h2 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-indigo-600 transition-colors">
              <%= link_to job[:title], job[:share_link], target: "_blank", rel: "noopener", class: "hover:underline" %>
            </h2>

            <% if @job_external_ids.include?(job[:job_id]) %>
              <h2 class="font-bold text-red-500">
                Applied
              </h2>
            <% end %>

            <!-- Company & Location -->
            <div class="mb-3">
              <p class="text-lg font-medium text-gray-800"><%= job[:company_name] %></p>
              <div class="flex items-center text-gray-600 mt-1">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                </svg>
                <span><%= job[:location] %></span>
              </div>
            </div>

            <!-- Via -->
            <p class="text-sm text-gray-500 mb-3">
              <strong>Via:</strong> <%= job[:via] %>
            </p>

            <!-- Description -->
            <p class="text-sm text-gray-700 line-clamp-3 mb-4">
              <%= truncate(job[:description], length: 150) %>
            </p>

            <!-- Save Button -->
            <%= form_with url: from_serpapi_path, method: :post, class:"mb-4" do |form| %>
              <%= form.hidden_field :job, value: job.to_json %>
              <%= form.submit 'Save to My Jobs',
                class:"text-sm px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white font-medium rounded-lg shadow-sm transition cursor-pointer" %>
            <% end %>

            <!-- Apply Buttons -->
            <div class="mt-auto pt-4 border-t border-gray-100 flex flex-wrap gap-2">
              <% job[:apply_options].each do |apply_option| %>
                <%= link_to apply_option[:title], apply_option[:link], target: "_blank", rel: "noopener",
                    class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg shadow-sm transition" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No jobs found</h3>
        <p class="text-gray-600 mb-6">Try refining your search criteria.</p>
      </div>
    <% end %>

  </div>
</div>
